{
  "name": "confirmify-chrome-extension",
  "version": "1.0.0",
  "description": "Chrome Extension for confirmify",
  "scripts": {
    "start": "parcel watch src/manifest.json --host localhost",
    "prebuild": "rimraf dist",
    "build": "parcel build src/manifest.json --no-cache",
    "postbuild": "node utils/remove-source-maps.mjs && node utils/create-zip.mjs",
    "release": "dotenv release-it --"
  },
  "author": "chp@deep-ink.ventures",
  "license": "MIT",
  "devDependencies": {
    "@parcel/config-webextension": "^2.9.1",
    "@types/chrome": "^0.0.237",
    "@types/fs-extra": "^11.0.1",
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.2.4",
    "dot-json": "^1.3.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.41.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "filenamify": "^5.1.1",
    "fs-extra": "^11.1.1",
    "glob": "^10.2.4",
    "opener": "^1.5.2",
    "parcel": "^2.9.1",
    "process": "^0.11.10",
    "release-it": "^16.1.0",
    "rimraf": "^5.0.1",
    "sharp": "^0.31.3",
    "zip-lib": "^0.7.3"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.2",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.13.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
